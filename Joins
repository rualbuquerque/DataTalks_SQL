USE AdventureWorks2012
Go

-----/// Take a look at the table HumanResources.Employee

SELECT column_name, data_type 
FROM information_schema.columns
WHERE table_name = 'Employee' AND table_schema = 'HumanResources';

-----/// Take a look at the table HumanResources.Department

SELECT column_name, data_type 
FROM information_schema.columns
WHERE table_name = 'Department' AND table_schema = 'HumanResources';
